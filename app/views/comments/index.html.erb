<% content_for :body do %>
    <tr>
        <td>
          <h1>Comments</h1>
          <table>
            <thead>
              <tr>
                <th>Submission title</th>
                <th>Username</th>
                <th>Content</th>
                <th>Created at</th>
                <th colspan="4"></th>
              </tr>
            </thead>

            <tbody>
              <% @comments.each do |comment| %>
                <tr>
                  <td><a href= "/submissions/<%= comment.submission.id %>"><%= comment.submission.title %></a></td>
                  <td><a href= "/users/<%= comment.user.id %>"> <%= comment.user.name %></a></td>
                  <td><%= comment.body %></td>
                  <td><%= time_ago_in_words(comment.created_at) %></td>
                  <td><%= link_to 'Show', comment_path(comment) %></td>
                  <% if comment.user == current_user %>
                    <!-- <td><%= link_to 'Edit', edit_comment_path(comment) %></td> -->
                    <td><%= link_to 'Destroy', comment_path(comment, goto: goto_url), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </td>
    </tr>
<% end %>
