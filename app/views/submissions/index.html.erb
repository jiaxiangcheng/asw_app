<% content_for :head do %>
  <title>Hacker News</title>
<% end %>

<% content_for :menu_bar do %>
  <td style="line-height:12pt; height:10px;">
    <span class="pagetop">
      <b class="hnname">
        <%= link_to 'Hacker News', news_menu_path %>
      </b>
      <a href="#">welcome</a>
      |
      <%= link_to 'new',  newest_menu_path %>
      |
      <a href="#">threads</a>
      |
      <a href="#">comments</a>
      |
      <a href="#">show</a>
      |
      <%= link_to 'ask',  ask_menu_path %>
      |
      <a href="#">jobs</a>
      |
      <%= link_to 'submit', new_submission_path %>
    </span>
  </td>
  <td style="text-align:right;padding-right:4px;">
    <span class="pagetop">
      <a id="me" href="#">aswlabs</a>
      (1) |
      <a id="logout" href="#">logout</a>
    </span>
  </td>
<% end %>

<% content_for :body do %>
  <tr>
    <td>
      <table class="itemlist" cellspacing="0" cellpadding="0" border="0">
        <tbody>
          <% @submissions.each_with_index do |submission, index| %>
              <tr class="athing" id="18336202">
                <td class="title" valign="top" align="right" width="23px">
                  <span class="rank"><%= index + 1 %>.</span>
                </td>
                <td class="votelinks" valign="top">
                  <center>
                    <a id="up_18336202" onclick='return vote(event, this, "up")' href="?id=18336202&amp;how=up&amp;auth=82ffa3bbc57e8f84bcfc87c0d5127d61661b2131&amp;goto=news">
                      <div class="votearrow" title="upvote"></div>
                    </a>
                  </center>
                </td>
                <td class="title">
                  <a href="<%= submission.url %>" class="storylink"><%= submission.title %></a>
                  <span class="sitebit comhead">
                    (
                    <a href="?site=<%= submission.url %>">
                      <span class="sitestr"><%= submission.url %></span>
                    </a>
                    )
                  </span>
                </td>
              </tr>
              <tr>
                <td colspan="2"></td>
                <td class="subtext">
                  <span class="score" id="score_18336202"><%= submission.points %> points</span>
                  by
                  <a href="?id=<%= submission.author %>" class="hnuser"><%= submission.author %></a>
                  <span class="age">
                    <a href="?id=18336202"><%= humanize_time(Time.now() - submission.created_at) %></a>
                  </span>
                  <span id="unv_18336202"></span>
                  |
                  <a href="#" onclick="return hidestory(event, this, 18336202)">hide</a>
                  |
                  <a href="?id=18336202"><%= submission.num_comments %>&nbsp;comments</a>
                </td>
              </tr>
              <tr class="spacer" style="height:5px"></tr>
            
          <% end %>
          <tr class="morespace" style="height:10px"></tr>
          <tr>
            <td colspan="2"></td>
            <td class="title">
              <a href="#" class="morelink" rel="nofollow">More</a>
            </td>
          </tr>
        </tbody>
      </table>
    </td>
  </tr>
<% end %>

