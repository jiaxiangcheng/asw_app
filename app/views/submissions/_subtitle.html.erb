<tr>
  <td colspan="2"></td>
  <td class="subtext">
    <span class="score" id="score_<%= submission.id %>"><%= submission.cached_votes_score %> points</span>
    by
    <%= link_to submission.user.name, submission.user, class: :hnuser %> </a>
    <span class="age">
      <%= link_to humanize_time(Time.now() - submission.created_at), submission %>
    </span>
    <span id="unv_<%= submission.id %>"></span>
    |
    <a href="#" >hide</a>
    |
    <%= link_to 'web', "https://www.google.com/search?q=#{CGI.escape submission.title}" %>
    |
    <a href="#" >favourite</a>
    |
    <% if submission.comments.count == 0 %>
      discuss
    <% else %>
      <%= link_to pluralize(submission.comments.count, 'comment'), submission %>
    <% end %>
    |
    <%= link_to 'Upvote',  like_submission_path(submission), method: :put %>
      <span>=></span> <%= submission.cached_votes_up %>
    |
    <%= link_to 'Downvote', dislike_submission_path(submission), method: :put %>
      <span>=></span> <%= submission.cached_votes_down %>
  </td>
</tr>
