<p id="notice"><%= notice %></p>

<div class="grid-container">
	<div><p>Hacker News</p></div>
	<div><p>wellcome</p></div>
	<div><p>new</p></div>
	<div><p>threads</p></div>
	<div><p>comments</p></div>
	<div><p>show</p></div>
	<div><p>ask</p></div>
	<div><p>jobs</p></div>
	<div style="margin: auto"><%= link_to 'Submit', new_news_path %></div>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Site</th>
      <th>Body</th>
      <th>Points</th>
      <th>Author</th>
      <th>Num comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <% unless news.site == "" %>
          <td><%= news.title %></td>
          <td><%= news.site %></td>
          <td><%= news.body %></td>
          <td><%= news.points %></td>
          <td><%= news.author %></td>
          <td><%= news.num_comments %></td>
          <td><%= link_to 'Show', news %></td>
          <td><%= link_to 'Edit', edit_news_path(news) %></td>
          <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
