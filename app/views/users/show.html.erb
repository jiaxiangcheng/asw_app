<% content_for :body do %>
  <tr>
    <td>
      <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
        <tr style="height:10px"></tr>
        <tr>
          <td>
            <table>
              <tbody>
                <div style="margin-left:20px">
                  <p>
                    <strong>Name:</strong>
                    <%= @user.name %>
                  </p>

                  <p>
                    <strong>Created:</strong>
                    <%= time_ago_in_words(@user.created_at) %> ago
                  </p>

                  <% if current_user && current_user.id == @user.id %>
                    <p>
                      <strong>Email:</strong>
                      <%= @user.email %>
                    </p>
                  <% end %>

                  <% if current_user && current_user.id == @user.id %>
                    <p>
                      <strong>Token:</strong>
                      <%= @user.token.access_token %>
                    </p>
                  <% end %>

                  <p>
                    <strong>About:</strong>
                    <%= @user.about %>
                  </p>

                  <p><%= link_to 'Comments', comments_path(created_by: @user.id) %></p>
                  <p><%= link_to 'Submissions', submissions_path(created_by: @user.id) %></p>

                  <% if current_user && current_user.id == @user.id %>
                    <p><%= link_to 'Upvoted Comments', comments_path(filter: :voted_by_me) %></p>
                    <p><%= link_to 'Upvoted Submissions', submissions_path(filter: :voted_by_me) %></p>
                    <%= link_to '<button type="button">Edit User</button>'.html_safe, edit_user_path(@user) %>
                  <% end %>

                </div>
                <tr class="spacer" style="height:20px"></tr>
              </tbody>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
<% end %>
